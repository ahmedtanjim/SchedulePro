<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/half_margin"
    android:clipToPadding="false"
    android:orientation="horizontal"
    android:paddingStart="@dimen/half_margin"
    android:paddingEnd="@dimen/half_margin"
    android:paddingTop="@dimen/small_margin"
    android:paddingBottom="@dimen/small_margin"
    android:background="@drawable/multiselect_chip_background">

    <TextView
        android:id="@+id/chip_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        style="@style/Text.Regular16"
        android:textColor="@color/chip_text"
        tools:text="BSP"
        />

    <ImageView
        android:id="@+id/close_action"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="@dimen/standard_margin"
        android:contentDescription="@null"
        android:src="@drawable/close_icon"
        app:tint="@color/chip_text"/>

</LinearLayout>